<!-- Cart -->
@model GioHangViewModel

@if (TempData["Message"] != null)
{
	<div class="alert alert-success">@TempData["Message"]</div>
}
<div style="display:flex magrin:150px">
	


	<!-- breadcrumb -->
	<div class="container" style="margin-top: 50px;">
		<div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
			<a href="index.html" class="stext-109 cl8 hov-cl1 trans-04">
				Home
				<i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
			</a>

			<span class="stext-109 cl4">
				Shoping Cart
			</span>
		</div>
	</div>


	<!-- Shoping Cart -->
	<form class="bg0 p-t-75 p-b-85">
		<div class="container">
			<div class="row">
				<div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
					<div class="m-l-25 m-r--38 m-lr-0-xl">
						<div class="wrap-table-shopping-cart">
							<table class="table">
								<tr>
									<th>Product</th>
									<th>Name</th>
									<th>Price</th>
									<th>Quantity</th>
									<th>Total</th>
									<th></th>
								</tr>

								@foreach (var item in Model.DsGioHang)
								{
									<tr class="table_row">
										<td>
											<div class="how-itemcart1">
												<img src="~/@item.ProDuct.ImageUrl" alt="IMG">
											</div>
										</td>
										<td>@item.ProDuct.Name</td>
										<td>$@item.ProDuct.Price</td>
										<td>
											<div style="display: flex; border: 0.4px solid gray; justify-content: space-between; width: 100px">
												<a asp-action="Giam" asp-route-giohangId="@item.Id" style="border: 0.1px solid gray; padding: 3px 10px">
													<i class="fs-16 zmdi zmdi-minus"></i>
												</a>

												<input type="text" name="num-product2" value="@item.Quantity" style="width: 30px; text-align: center; user-select: none">

												<a asp-action="Tang" asp-route-giohangId="@item.Id" style="border: 0.1px solid gray; padding: 3px 10px">
													<i class="fs-16 zmdi zmdi-plus"></i>
												</a>
											</div>
											<div>@ViewBag.Mess</div>
										</td>
										<td>$@String.Format("{0:0,0}",item.ProductPrice)</td>
										<td>
											<a onclick="return confirm('Do you really want to remove this product?');" asp-action="Xoa" asp-route-giohangId="@item.Id" class="btn-remove"><i class="fas fa-trash"></i></a>
										</td>
									</tr>

								}


							</table>

						</div>
						<a asp-controller="Shop" asp-action="Index" class="btn btn-black btn-lg py-3 btn-block mt-5" style="width: 30%; background-color: black; color: white; margin-left: 330px" onclick="window.location='thankyou.html'">Continue</a>

						
					</div>
				</div>

				<div class="col-sm-10 col-lg-7 col-xl-5 m-lr-auto m-b-50">
					<div class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm">
						<h4 class="mtext-109 cl2 p-b-30">
							Cart Totals
						</h4>

						<div class="flex-w flex-t bor12 p-b-13">
							<div class="size-208">
								<span class="stext-110 cl2">
									Subtotal:
								</span>
							</div>

							<div class="size-209">
								<span class="mtext-110 cl2">
									<td class="column-5">$@String.Format("{0:0,0}",Model.HoaDon.Toatal-3)</td>
								</span>
							</div>
						</div>

						<div class="flex-w flex-t bor12 p-t-15 p-b-30">
							<div class="size-208 w-full-ssm">
								<span class="stext-110 cl2">
									Shipping:
								</span>
							</div>

							<div class="size-209 p-r-18 p-r-0-sm w-full-ssm">
								<p class="stext-111 cl6 p-t-2">
									There are no shipping methods available. Please double check your address, or contact us if you need any help.
								</p>

								<div class="p-t-15">
									<span class="stext-112 cl8">
										Calculate Shipping
									</span>

									<div class="rs1-select2 rs2-select2 bor8 bg0 m-b-12 m-t-9">
										<select class="js-select2" name="time">
											<option disabled>Select a payment method</option>
											<option>COD</option>
											<option>Pay</option>
										</select>
										<div class="dropDownSelect2"></div>
									</div>

									<div class="bor8 bg0 m-b-12">
										<label style="padding: 5px">Ship: $3</label>
									</div>

									<div class="bor8 bg0 m-b-22">
										<label style="padding: 5px">Time: 5 day - 1 week</label>
									</div>

									

								</div>
							</div>
						</div>

						<div class="flex-w flex-t p-t-27 p-b-33">
							<div class="size-208">
								<span class="mtext-101 cl2">
									Total:
								</span>
							</div>

							<div class="size-209 p-t-1">
								<span class="mtext-110 cl2">
									$@String.Format("{0:0,0}",Model.HoaDon.Toatal)
								</span>
							</div>
						</div>

						<a class="text-light flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer" asp-action="ThanhToan">Proceed to Checkout</a>
					</div>
				</div>
			</div>
		</div>
	</form>
</div>

